@model CloudPart3.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="edit-product spacing-top">
    <h1>Edit Product</h1>
    <h4>Product Details</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label">Description</label>
            <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Price ($)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="control-label">Category</label>
            <select asp-for="Category" class="form-control">
                <option value="">-- Select a Category --</option>
                <option value="t-shirt">T-Shirt</option>
                <option value="sneakers">Sneakers</option>
                <option value="hoodie">Hoodie</option>
                <option value="tracksuit">Track Suit</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Availability" class="control-label">Availability</label>
            <select asp-for="Availability" class="form-control">
                <option value="True">Available</option>
                <option value="False">Out of Stock</option>
            </select>
            <span asp-validation-for="Availability" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrlpath" class="control-label">Product Image</label>
            <div>
                <img src="@Model.ImageUrlpath" alt="Product Image" class="product-image-preview" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary btn-edit" />
        </div>
    </form>

    <div class="back-to-list">
        <i class="fa fa-reply" aria-hidden="true"></i>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

<style>
    .spacing-top {
        margin-top: 100px !important;
    }

    /* Main Container Styling */
    .edit-product {
        font-family: Arial, sans-serif;
        max-width: 700px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f8f8;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: left;
    }

        /* Header Styling */
        .edit-product h1 {
            color: #FF4400;
            font-size: 2.5em;
            margin-bottom: 10px;
            font-weight: bold;
            text-align: center;
        }

        .edit-product h4 {
            color: #333;
            font-size: 1.2em;
            margin-top: 5px;
            margin-bottom: 15px;
            font-weight: bold;
            text-align: center;
        }

    /* Form Styling */
    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 1em;
        width: 100%;
    }

        .form-control:focus {
            border-color: #FF4400;
            box-shadow: 0 0 5px rgba(255, 68, 0, 0.5);
        }

    .product-image-preview {
        max-width: 100%;
        max-height: 200px;
        display: block;
        margin: 10px 0;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    /* Button Styling */
    .btn-edit {
        background-color: #FF4400;
        color: #fff;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
        font-size: 1em;
    }

        .btn-edit:hover {
            background-color: #cc3700;
        }

    /* Back to List Styling */
    .back-to-list {
        text-align: center;
        margin-top: 15px;
    }

        .back-to-list a {
            color: #FF4400;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .back-to-list a:hover {
                color: #cc3700;
            }

        .back-to-list i {
            margin-right: 5px;
        }

    /* Validation Messages */
    .text-danger {
        color: #dc3545;
        font-size: 0.9em;
    }
</style>
