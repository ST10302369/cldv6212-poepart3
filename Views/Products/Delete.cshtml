@model CloudPart3.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-container spacing-top">
    <h1>Delete Product</h1>

    <h3 class="confirmation-text">Are you sure you want to delete this product?</h3>
    <div class="product-details">
        <h4>Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ProductDescription)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductDescription)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Category)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Availability)</dt>
            <dd class="col-sm-9">
                @{
                    if (Model.Availability.HasValue && Model.Availability.Value)
                    {
                        <span class="availability available">Available</span>
                    }
                    else
                    {
                        <span class="availability unavailable">Out of Stock</span>
                    }
                }
            </dd>

            <dt class="col-sm-3">Product Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrlpath" alt="Product Image" class="product-image" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn-delete">Delete</button>
            <a asp-action="Index" class="btn-back"><i class="fa fa-reply" aria-hidden="true"></i> Back to List</a>
        </form>
    </div>
</div>

<style>
    .spacing-top {
        margin-top: 100px !important;
    }

    /* Main Container Styling */
    .delete-container {
        font-family: Arial, sans-serif;
        color: #000;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f8f8;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        /* Heading Styling */
        .delete-container h1 {
            color: #FF4400;
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 10px;
        }

    /* Confirmation Text */
    .confirmation-text {
        color: #333;
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    /* Product Details Section */
    .product-details h4 {
        color: #FF4400;
        font-weight: bold;
        font-size: 1.5em;
        margin-bottom: 10px;
    }

    .product-details dl {
        text-align: left;
        margin-top: 15px;
    }

    .product-details dt {
        font-weight: bold;
        color: #333;
    }

    .product-details dd {
        margin-bottom: 10px;
        color: #555;
    }

    /* Availability Badge */
    .availability {
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 4px;
    }

    .available {
        color: #fff;
        background-color: #28a745;
    }

    .unavailable {
        color: #fff;
        background-color: #dc3545;
    }

    /* Product Image */
    .product-image {
        max-width: 150px;
        max-height: 150px;
        border-radius: 8px;
        margin-top: 10px;
    }

    /* Button Styling */
    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
        margin-top: 20px;
        margin-right: 10px;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .btn-back {
        color: #FF4400;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

        .btn-back:hover {
            color: #cc3700;
        }
</style>
